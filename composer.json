{
    "name": "open-solid/callable-invoker",
    "type": "symfony-bundle",
    "license": "MIT",
    "description": "Smart callable execution for PHP",
    "minimum-stability": "stable",
    "require": {
        "php": ">=8.4",
        "symfony/framework-bundle": "^6.4|^7.0"
    },
    "config": {
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "OpenSolid\\CallableInvoker\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "OpenSolid\\CallableInvoker\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.94",
        "phpstan/phpstan": "^2.1",
        "phpunit/phpunit": "^13.0"
    },
    "scripts": {
        "cs": "php-cs-fixer fix --dry-run --diff",
        "stan": "phpstan analyse",
        "test": "phpunit",
        "qa": [
            "@cs",
            "@stan",
            "@test"
        ]
    }
}
